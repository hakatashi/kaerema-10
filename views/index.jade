extends ./layout.jade

block content
	h1 Guess the books hakatashi loves :)

	if message
		p.bg-info(style='padding: 15px;')= message

	form(method='post')
		div.form-group
			label.control-label(for='title') Title
			input.form-control#title(type='text', name='title', placeholder='Title')
		div.form-group
			label.control-label(for='name') Your name (optional)
			input.form-control#name(type='text', name='name', placeholder='Your name')
		button.btn.btn-default(type='submit') Submit

	div.table-responsive(style='margin-top: 24px;')
		table.table.table-hover
			tr
				th #
				th title
				th author
				th scorer
			each rank in ranking
				tr
					td= rank.rank
					td= rank.title
					td= rank.author
					td= rank.name
