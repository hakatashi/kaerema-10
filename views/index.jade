extends ./layout.jade

block content
	if !admin
		h1 Guess the books hakatashi loves :)

		if message
			p.bg-info(style='padding: 15px;')= message

		form(method='post', name='submit')
			div.form-group
				label.control-label(for='title') Title
				input.form-control#title(type='text', name='title', placeholder='Title')
			div.form-group
				label.control-label(for='name') Your name (optional)
				input.form-control#name(type='text', name='name', placeholder='Your name', value= name)
			button.btn.btn-default(type='submit') Submit
	else
		h1 Lalala...

		form(method='post', name='submit')
			div.form-group
				label.control-label(for='registTitle') Title
				input.form-control#registTitle(type='text', name='registTitle', placeholder='Title')
			div.form-group
				label.control-label(for='registAuhor') Author
				input.form-control#registAuthor(type='text', name='registAuthor', placeholder='Author')
			button.btn.btn-default(type='submit') Add

	div.table-responsive(style='margin-top: 24px;')
		table.table.table-hover
			tr
				th #
				th title
				th author
				th scorer
			each rank in ranking
				tr
					td= rank.rank
					td= rank.title
					td= rank.author
					td= rank.name

	h2 Misses

	ul
		each miss in misses
			li= miss.title

	p
		a(href='login') admin
